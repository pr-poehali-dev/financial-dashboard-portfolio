{
  "tests": [
    {
      "name": "Create new user",
      "method": "POST",
      "path": "/",
      "body": {
        "telegram_id": 123456789,
        "username": "test_user",
        "first_name": "Test",
        "last_name": "User"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": {
          "telegram_id": 123456789
        },
        "is_new": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "telegram_id": 123456789,
        "username": "test_user",
        "first_name": "Test"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "is_new": false
      },
      "bodyMatcher": "partial"
    }
  ]
